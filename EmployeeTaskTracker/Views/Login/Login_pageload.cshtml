@model EmployeeTaskTracker.Models.login

@{
    Layout = null;
}

<style>
    body {
        background-color: #f4f6f8;
        font-family: Arial, sans-serif;
        padding: 20px;
    }

    
    .login-box {
        background-color: #ffffff;
        padding: 40px;
        min-height: 380px;
        max-width: 400px;
        margin: 0 auto;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    h2 {
        text-align: center;
        color: #2c3e50;
        margin-top: 10px;
        margin-bottom: 25px;
    }

    label {
        display: block;
        margin-bottom: 6px;
        color: #2c3e50;
        font-weight: bold;
    }

    input[type="text"],
    input[type="password"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 18px;
        border: 1px solid #ccc;
        border-radius: 3px;
    }

    .btn {
        padding: 10px 26px;
        border: none;
        color: #fff;
        font-size: 14px;
        border-radius: 3px;
        cursor: pointer;
        width: 100%;
    }

  
    .btn-login {
        background-color: #28a745;
        margin-top: 14px;
    }

        .btn-login:hover {
            background-color: #218838; 
        }


    .validation {
        color: red;
        font-size: 13px;
        margin-bottom: 10px;
        text-align: center;
        font-weight: bold;
    }
</style>

<div class="login-box">

    <h2>Login</h2>

    @using (Html.BeginForm("LoginClick", "Login", FormMethod.Post))
    {
        <label>Username</label>
        @Html.TextBoxFor(m => m.username)
        @Html.ValidationMessageFor(m => m.username, "", new { @class = "validation" })

        <label>Password</label>
        @Html.PasswordFor(m => m.password)
        @Html.ValidationMessageFor(m => m.password, "", new { @class = "validation" })

        <input type="submit" value="Login" class="btn btn-login" />
    }

    <div class="validation" style="margin-top:15px;">
        @Html.DisplayFor(m => m.msg)
    </div>


</div>
