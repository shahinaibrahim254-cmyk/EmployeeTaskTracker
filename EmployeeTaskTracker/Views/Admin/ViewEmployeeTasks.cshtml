
@model List<EmployeeTaskTracker.sp_Getemployeetasks_Result>

@{
    Layout = null;
}

<style>
    body {
        background-color: #f2f8f4;
        font-family: Arial, sans-serif;
        padding: 40px;
    }

    h2 {
        text-align: center;
        color: #1e8449;
        margin-bottom: 30px;
    }

    .box {
        background-color: #ffffff;
        padding: 30px;
        max-width: 900px;
        margin: auto;
        border: 1px solid #cfeee0;
        border-radius: 4px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 25px;
    }

    th, td {
        border: 1px solid #d5f0e3;
        padding: 12px;
    }

    th {
        background-color: #e9f7ef;
        color: #1e8449;
    }

    tr:nth-child(even) {
        background-color: #f8fcfa;
    }

    .btn {
        padding: 10px 20px;
        background-color: #2ecc71;
        color: #fff;
        text-decoration: none;
        border-radius: 3px;
    }

        .btn:hover {
            background-color: #27ae60;
        }
</style>

<h2>Assigned Tasks</h2>

<div class="box">
    <table>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
        </tr>

        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.Status</td>
            </tr>
        }
    </table>

    <a href="@Url.Action("Admin_Home","Admin")" class="btn">Back</a>
</div>
