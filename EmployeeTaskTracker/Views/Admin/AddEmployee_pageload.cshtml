@model EmployeeTaskTracker.Models.EmployeeVM

@{
    Layout = null;
}

<style>
    body {
        background: linear-gradient(to right, #e8f5e9, #c8e6c9);
        font-family: Arial, sans-serif;
    }
    .page-center {
        padding-top: 40px;
    }


    .page-title {
        text-align: center;
        font-weight: 700;
        color: #1b5e20;
        margin-bottom: 25px;
    }


    .form-box {
        background: white;
        width: 420px;
        padding: 28px;
        border-radius: 10px;
        box-shadow: 0 6px 15px rgba(0,0,0,0.1);
        margin: 0 auto; 
    }




    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-weight: bold;
            color: #2e7d32;
            margin-bottom: 5px;
        }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #81c784;
        border-radius: 4px;
    }

        .form-control:focus {
            outline: none;
            border-color: #2e7d32;
            box-shadow: 0 0 5px #a5d6a7;
        }

    .btn-full {
        width: 100%;
        padding: 12px;
        border-radius: 6px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        display: block;
        text-align: center;
    }

   
    .btn-row {
        display: flex;
        gap: 10px; 
        margin-top: 10px;
    }

    .btn-green {
        flex: 1; 
        padding: 12px;
        font-size: 15px;
        font-weight: 600;
        border-radius: 6px;
        border: none;
        background-color: #2e7d32;
        color: #fff;
        cursor: pointer;
    }

        .btn-green:hover {
            background-color: #1b5e20;
        }

    .btn-back-small {
        padding: 12px 16px;
        font-size: 14px;
        font-weight: 600;
        border-radius: 6px;
        border: 1px solid #2e7d32;
        background-color: #e8f5e9;
        color: #2e7d32;
        text-decoration: none;
        white-space: nowrap;
        display: flex;
        align-items: center;
    }

        .btn-back-small:hover {
            background-color: #2e7d32;
            color: #fff;
        }



    .validation {
        color: red;
        font-size: 13px;
    }
</style>

<div class="page-center">

    <h2 class="page-title">Add Employee</h2>

    @using (Html.BeginForm("AddEmployee_click", "Admin", FormMethod.Post))
    {
<div class="form-box">

    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "validation" })
    </div>

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "validation" })
    </div>

    <div class="form-group">
        <label>Username</label>
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "validation" })
    </div>

    <div class="form-group">
        <label>Password</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "validation" })
    </div>
    <div class="btn-row">
        <input type="submit" value="Add Employee" class="btn-green" />
        <a href="@Url.Action("Admin_Home","Admin")" class="btn-back-small">
            ← Back
        </a>
    </div>

</div>
    }

</div>
